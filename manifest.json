{
    "manifest_version": 3,
    "name": "Auto Next Episode",
    "version": "1.0",
    "description": "Automatically plays the next episode when available.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  